extend ../index
block content
  include ../layout/flash
  h2 Marquee Items
  if (marquees.length == 0)
    p
      | No notices yet! Why don't you make one?
  else
    table.marquees
      thead
        tr
          th Text
          th Actions
      tbody
        - for (var i = 0; i < marquees.length; ++i) {
            tr
              td= marquees[i].text
              td
                <a href="/admin/marquee/#{marquees[i]._id}/edit">Edit</a> â€”
                <a href="/admin/marquee/#{marquees[i]._id}/delete">Delete</a>
        - }
  form(method='post',action='/admin/marquee/create').marquee-create
    textarea(name='marquee[text]',placeholder='What do you want to say?')
    input(type='submit',value='Save')
