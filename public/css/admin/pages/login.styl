#login {
	margin: 0; padding: 60px 20% 100px;
	background: rgb(239, 239, 239);
	border-radius: 3px;
}

#login h2 {
	padding-bottom: 10px;
	display: block;
	border-bottom: 1px solid rgb(255, 255, 255);

	color: rgb(50, 50, 50);
	font-size: 18px;
	font-weight: 300;
}

#login form input[type='password'] {
	width: 100%;
	padding: 8px 5px;
}

#login form input[type='submit'] {
	margin-top: 5px;
	float: right;
}
