@import url("https://fonts.googleapis.com/css?family=Open\+Sans:300,400,500");
@import url("https://fonts.googleapis.com/css?family=Roboto:300,400");

@import '../mixins.styl'

body {
	margin: 0; padding: 0;

	font: 400 14px/1.5em "Open Sans";
	color: rgb(51, 51, 51);
}

#content {
	margin: auto; padding: 4em 10% 5em;
	max-width: 800px;
	overflow: hidden;
}

h2 {
	margin: 0; margin-bottom: 1.5em; padding: 0 0 1em 0;
	border-bottom: 1px solid rgba(0,0,0, 0.15);
}

table {
	width: 100%
	border-collapse: collapse;
	border-spacing: 0px;
}

table th {
	border-bottom: 1px solid #ccc;
	font-weight: bold;
}

table td, table th {
	padding: .8em .4em;
	text-align: left;
}

table td .text {
	padding-right: 5%;
	width: 80%;
}

table tr + tr {
	border-top: 1px solid rgb(224, 224, 224);
}

table tr.active {
	background: rgba(255, 255, 0, 0.5);
}

table tr.active:hover {
	background: rgba(255, 255, 0, 0.35);
}

#preview img {
	width: 100%;
}

.alert {
	margin: 1em 0px 2em;
	font-weight: 300;
	text-shadow: 0px 1px 0px rgba(255, 255, 255, 0.5);
	border-radius: 2px;
	cursor: pointer;
}

.alert p {
	margin: 8px 10px;
}

.alert.error {
	background-color: #f2dede;
	border: 1px solid #eed3d7;
	color: #b94a48;
}

.alert.success {
	background-color: #dff0d8;
	border: 1px solid #d6e9c6;
	color:#468847;
}

.alert.warning {
	background: #fcf8e3;
	border: 1px solid #fbeed5;
	color: #c09853;
}

