@import url("http://fonts.googleapis.com/css?family=Open\+Sans:300,400,500");
@import url("http://fonts.googleapis.com/css?family=Roboto:300,400");

body {
	margin: 0; padding: 0;

	font-family: "Open Sans";
	font-weight: 400;
	font-size: 14px;
	color: rgb(51, 51, 51);
}

#content {
	margin: auto; padding: 50px 10% 60px;
	max-width: 800px;
	overflow: hidden;
}

h2 {
	margin: 0; margin-bottom: 20px; padding: 0 0 5px 0;
	border-bottom: 1px solid rgb(240, 240, 240);
}

th, td {
	text-align: left;
}

table {
	width: 100%
	border-collapse: collapse;
	border-spacing: 0px;
}

table th {
	border-bottom: 1px solid #ccc;
	font-weight:bold;
}

table td, table th {
	padding:.8em .4em;
}

table td .text {
	padding-right:5%;
	width:80%;
}

table tr + tr {
	border-top: 1px solid rgb(224, 224, 224);
}

table tr.active {
	background: rgba(255, 255, 0, 0.5);
}

table tr.active:hover {
	background: rgba(255, 255, 0, 0.35);
}

#preview img {
	width: 100%;
}

.alert {
	margin: 1em 0px 2em;
	font-weight: 300;
	text-shadow: 0px 1px 0px rgba(255, 255, 255, 0.5);
	border-radius: 2px;
}

.alert p {
	margin: 8px 10px;
}

.alert.error {
	background-color: #f2dede;
	border: 1px solid #eed3d7;
	color: #b94a48;
}

.alert.success {
	background-color: #dff0d8;
	border: 1px solid #d6e9c6;
	color:#468847;
}

.alert.warning {
	background: #fcf8e3;
	border: 1px solid #fbeed5;
	color: #c09853;
}

