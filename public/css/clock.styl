@import url("https://fonts.googleapis.com/css?family=Open\+Sans:400,300");
@import url("https://fonts.googleapis.com/css?family=Roboto:400,500,700,300,100|Anonymous\+Pro");

@import 'mixins.styl'

body {
	margin: 0; padding: 0;

	background-color: #2c3e50;
	background-image: url("/wallpaper/active");
	background-repeat: none;

	font: 500 38px/1.25em "Roboto",Helvetica Neue,Helvetica,Arial,sans-serif;
	color: white;

	-webkit-text-size-adjust: 100%;
}

#wrapper {
	margin-top: 0.85em;
	padding: 0 0 0.5em;

	display: flex;
	display: -webkit-flex;
}

#marquee {
	background-color: rgba(51, 51, 51, 0.75);
	margin-top: 19px; padding: 0 0.5em;
	color: #FAFAFA;
}

#marquee ul {
	margin: 0; padding: 0;
	height: 1.5em;
}

#marquee ul li {
	padding: 0.2em 0 0.2em 0.5em;
}

#right-pane {
	width: 50%;
	flex: 1 1 main-size;
	order: 2;
	text-align: center;
	text-shadow: 2px 2px 2px rgba(50, 50, 50, 0.8);
}

#clock {
	padding: 0 0.5em 2em;
}

#clock p {
	margin: 0; padding: 0;
}

#clock #date {
	font-size: 1.25em;
	line-height: 1.5em;
}

#clock #time {
	margin-top: 0.35em;
	font-weight: 700;
	font-size: 2.5em;
	line-height: 1em;
}

#schedule {
	padding: 0 0.5em;
	width: 50%;
	box-sizing: border-box;
	flex: 1 1 main-size;

	color: black;
	font-weight: 700;

	border-radius: 2px;
}

#schedule ol {
	background-color: rgba(0,0,0, 0.7);
	margin: 0; padding: 0;
	list-style-type: none;
}

#schedule ol li {
	background: linear-gradient(#F0F0F0, #D2D2D2);
	padding: 0.2em 0.5em;
	border-top: 1px solid #fff;
	border-bottom: 1px solid rgba(0,0,0, 0.5);
	transition: border-width 0.2s;
}

#schedule ol li:first-child {
	border-radius: 2px 2px 0 0;
}

#schedule ol li:last-child {
	border-radius: 0 0 2px 2px;
}

#schedule ol li.active {
	background: linear-gradient(#444, #222);
	border-top: 1px solid #444;
	color: #FFF;
}

#schedule ol li.next {
	border-top: 10px solid rgba(0, 0, 0, 0.5);
}

#schedule.collapsing ol li.next {
	border-top: 1px solid #fff;
	border-radius: 2px 2px 0 0;
}

#schedule.collapsing ol li.active {
	border-radius: 2px 2px 0 0;
}

#notices {
	background-color: rgba(255, 255, 0, 0.5);
	margin: 0 1em 1.5em 0.5em; padding: 1em;
	border-radius: 2px;
}

#notices ul {
	margin: 0; padding: 0;
	list-style-type: none;
}

#connection-error {
	height: 1rem; width: 1rem;
	display: none;
	position: fixed;
	bottom: 10px; right: 10px;
	background-color: red;
}

.closingTime #clock #date {
	font-size: 1.5em;
}

.closingTime #clock #time {
	font-size: 4em;
	margin-top: 0.15em;
}

.closingTime #schedule {
	display: none;
}

@media screen and (max-width: 1000px) {
	#wrapper {
		flex-direction: column;
	}

	#schedule, #right-pane {
		width: 100%;
		order: 0;
	}
}

@media screen and (max-width: 700px) {
	.closingTime #clock #time {
		font-size: 3em;
	}
}

@media screen and (max-width: 530px) {
	#marquee, #clock, #schedule, #notices {
		font-size: 7.17vw;
		line-height: 1.25em;
	}
}
