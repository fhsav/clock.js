@import url("http://fonts.googleapis.com/css?family=Open\+Sans:400,300");
@import url("http://fonts.googleapis.com/css?family=Roboto:400,500,700,300,100|Anonymous\+Pro");

body {
	margin: 0; padding: 0;

	background-color: #2c3e50;
	background-image: url("/wallpaper/active");
	background-repeat: none;

	font: 500 38px/1.25em "Roboto",Helvetica Neue,Helvetica,Arial,sans-serif;
	color: white;
}

#wrapper {
	margin-top: 0.85em;
	padding: 0 0.5em;
	overflow: hidden;
}

#marquee {
	background-color: rgba(51, 51, 51, 0.75);
	margin-top: 19px; padding: 0 0.5em;
	color: #FAFAFA;
	border-radius: 3px;
}

#marquee ul {
	margin: 0; padding: 0;
	height: 1.5em;
}

#marquee ul li {
	padding: 0.2em 0px 0.2em 0.5em;
}

#clock {
	width: 45.3781%;
	float: right;

	text-align: center;
	text-shadow: 2px 2px 2px rgba(50, 50, 50, 0.8);

	-webkit-box-sizing: border-box;
	-moz-box-sizing: border-box;
	box-sizing: border-box;
}

#clock p {
	margin: 0; padding: 0;
}

#clock #date {
	font-size: 1.25em;
	line-height: 1.5em;
}

#clock #time {
	margin-top: 0.35em;
	font-size: 2.5em;
	font-weight: 700; 
	line-height: 1em;
}

#schedule {
	background-color: rgba(0,0,0, 0.7);
	width: 49.5798%;

	float: left;
	overflow: hidden;

	color: black;
	font-weight: 700;

	border-radius: 2px;

	-webkit-box-sizing: border-box;
	-moz-box-sizing: border-box;
	box-sizing: border-box;
}

#schedule ol {
	margin: 0; padding: 0;
	list-style-type: none;
}

#schedule ol li {
	padding: 0.2em 0.5em;
	background: linear-gradient(#F0F0F0, #D2D2D2);
	border-top: 1px solid #FFF;
}

#schedule ol li + li {
	border-top: 1px solid rgba(0, 0, 0, 0.5);
}

#schedule ol li.active {
	background-color: rgba(0,0,0, 0.9);
}
